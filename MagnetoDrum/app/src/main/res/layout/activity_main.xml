<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/drumy"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/apphead2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="4.2"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/b1"
            android:onClick="b1"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/b2"
            android:onClick="b2"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel2"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/b3"
            android:onClick="b3"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_margin="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel3"/>

        <ImageButton
            android:id="@+id/b4"
            android:onClick="b4"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_margin="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel4"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="4.2"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/b5"
            android:onClick="b5"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel5"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/b6"
            android:onClick="b6"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel6"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/b7"
            android:onClick="b7"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel7"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/b8"
            android:onClick="b8"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/buttonsel8"
            android:layout_margin="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:fontFamily="@font/work_sans_light"
        android:text="Created by Sahil"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>